<h2>Sign In</h2>

<%= link_to "Sign up!", new_user_url %>

<p><strong>Don't want to make an account? Try our demo account:</strong></p>
<p>Username: appacademy@example.com, Password: password</p>
<br>
<% if flash[:errors] %>
<strong><%=flash[:errors] %></strong>
<% end %>

<form action="/session" method="post">
  <%= auth_token %>
  <label for="email">Email</label>
  <input type="text" name="user[email]" value="">
  <br>

  <label for="password">Password</label>
  <input type="text" name="user[password]" value="">
  <br>

  <input type="submit" name="submit" value="Submit">
</form>
